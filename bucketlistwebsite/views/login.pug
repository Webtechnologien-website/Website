extends loginlayout

block content
  button.btn.btn-secondary(type='button', style='position: absolute; top: 10px; left: 10px;', onclick='window.location.href="/"')
      i.fa.fa-arrow-left Back to Home
  #main
    
    form(action='/login', method='post')
      div.label login form
      div.form-group
        label(for='username') Username:
        input#username.form-control(type='text', name='username', required)
      div.form-group
        label(for='password') Password:
        input#password.form-control(type='password', name='password', required)
      div.form-group
        input#remember-me(type='checkbox', name='remember-me')
        label(for='remember-me') Remember Me
    
      button(type="submit") login
      p
        | not a member?
        a(href="/signup") Sing Up now

  if errors
    ul
      for error in errors
        li!= error.msg