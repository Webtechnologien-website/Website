extends loginlayout

block content
  button.btn.btn-secondary(type='button', style='position: absolute; top: 10px; left: 10px;', onclick='window.location.href="/"')
    i.fa.fa-arrow-left Back to Welcome
  h1 Login
  form(action='/login', method='post')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', name='username', required)
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password', required)
    
    button.btn.btn-primary(type='submit') Login
  p
    a(href='/signup') Sign up

  if errors
    ul
      for error in errors
        li!= error.msg